<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#4cc1bb"

    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tfname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="First name :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/efname"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.50" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tlname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Last name : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/elname"
                    android:layout_width="212dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.25" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/temail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Email : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/eemail"
                    android:layout_width="271dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:inputType="textEmailAddress"
                    android:layout_weight="3.10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tmobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Mobile Number : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/emobile"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Password : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/epassword"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:inputType="textPassword" />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="35dp"
                android:background="#f74747"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_weight="0.07"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="wrap_content"
                    android:layout_height="86dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <RadioButton
                        android:id="@+id/rrecruiter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.91"
                        android:fontFamily="sans-serif-condensed"
                        android:onClick="onRecruiter"
                        android:text="Recruiter"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <RadioButton
                        android:id="@+id/rstudent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.75"
                        android:fontFamily="sans-serif-condensed"
                        android:onClick="onStudent"
                        android:text="Student"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/lrecruiter"
                    android:layout_width="273dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tcompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Company :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/ecompany"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.23" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="35dp"
                android:background="#f74747"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/llang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Languages :"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFF"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lstudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.21"
                android:orientation="horizontal"
                android:visibility="invisible">

                <GridView
                    android:id="@+id/gridview2"
                    android:layout_width="fill_parent"
                    android:layout_height="296dp"
                    android:choiceMode="multipleChoice" />


            </LinearLayout>


            <Button
                android:id="@+id/bsubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.14"
                android:onClick="onSubmit"
                android:text="Submit"
                android:textColor="#FFFF"
                android:textSize="18dp"
                android:backgroundTint="#B6B6B4"
                android:translationY="-370dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
